@model IEnumerable<ExamenP1CarvajalDavid.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<h1>Reservas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Reserva</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha Entrada</th>
            <th>Fecha Salida</th>
            <th>Valor a Pagar</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FechaEntrada.ToShortDateString()</td>
                <td>@item.FechaSalida.ToShortDateString()</td>
                <td>@item.ValorPagar.ToString("C")</td>
                <td>@item.Cliente?.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
